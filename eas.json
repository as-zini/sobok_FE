{
  "cli": {
    "version": ">= 3.0.0"           
  },
  "build": {
    "development": {
      "distribution": "internal",
      "developmentClient": true,    
      "ios": {
        "simulator": true           
      },
      "android": {
        "buildType": "apk"          
      }
    },
    "preview": {
      "distribution": "internal",
      "developmentClient": false,
      "android": {
        "buildType": "apk"          
      },
      "ios": {
        "simulator": false          
      }
    },
    "production": {
      "distribution": "store",      
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "app-bundle"   
      }
    }
  }
}
